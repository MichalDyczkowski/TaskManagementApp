@model IEnumerable<TaskManagementApp.Models.HistoryLog>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Historia działań";
}

<div class="container my-4">
    <h2 class="mb-4">Historia działań</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Użytkownik</th>
                    <th>Akcja</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.UserName</td>
                        <td>@log.Action</td>
                        <td>@log.ActionDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Brak logów do wyświetlenia.</p>
    }
</div>