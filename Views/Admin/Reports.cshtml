@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Generowanie raportów";
}

<div class="container my-4">
    <h2 class="mb-4">Generowanie raportów</h2>

    <form asp-action="GenerateCsvReport" method="post" class="row g-3">
        <div class="col-md-6">
            <label for="startDate" class="form-label">Data początkowa:</label>
            <input type="date" id="startDate" name="startDate" class="form-control" required>
        </div>

        <div class="col-md-6">
            <label for="endDate" class="form-label">Data końcowa:</label>
            <input type="date" id="endDate" name="endDate" class="form-control" required>
        </div>

        <div class="col-md-12">
            <label for="actionType" class="form-label">Typ akcji:</label>
            <select id="actionType" name="actionType" class="form-select">
                <option value="">Wszystkie</option>
                <option value="Rejestracja">Rejestracja</option>
                <option value="Logowanie">Logowanie</option>
                <option value="Usunięto użytkownika: ">Usunięcie użytkownika</option>
            </select>
        </div>

        <div class="col-md-12 text-end">
            <button type="submit" class="btn btn-primary">Pobierz raport CSV</button>
        </div>
    </form>
</div>